<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="0dp"
        android:right="0dp"
        android:left="5dp"
        android:top="5dp">
        <shape android:shape="rectangle" >
            <solid android:color="#40000000" />
            <corners
                android:radius="12dp"/>
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:right="5dp"
        android:left="0dp"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <corners android:radius="12dp" />
            <gradient
                android:angle="180"
                android:startColor="#cb8cf0"
                android:centerColor="#404040"
                android:endColor="#000000"/>
            <solid android:color="#cb8cf0" />
        </shape>
    </item>

    <item
        android:bottom="7dp"
        android:left="2dp"
        android:right="19dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <solid android:color="#fff" />
            <corners
                android:topLeftRadius="12dp"
                android:bottomLeftRadius="12dp" />
        </shape>
    </item>

    <item
        android:bottom="5dp"
        android:right="5dp"
        android:left="0dp"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#404040" />
        </shape>
    </item>

</layer-list>