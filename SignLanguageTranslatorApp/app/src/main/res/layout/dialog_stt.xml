<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="420dp"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="20dp"
        android:paddingTop="4dp"
        android:background="@drawable/dialog_setting_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="#333"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="7"
            android:textColor="#fff"
            android:textSize="22dp"
            android:fontFamily="@font/ibmplexsanskrsemibold"
            android:text="목소리를 글자로 바꾸기" />

        <TextView
            android:id="@+id/sttResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="0dp"
            android:layout_weight="3.5"
            android:paddingTop="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:shadowColor="#999"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textColor="#333"
            android:text="음성인식 결과가\n여기에 표시됩니다."
            android:textSize="19sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_confirm"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_weight="0.65"
            android:background="@drawable/dialog_setting_button"
            android:text="닫기"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_record"
        android:src="@drawable/icon_mic_on"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_weight=".2" />
</LinearLayout>