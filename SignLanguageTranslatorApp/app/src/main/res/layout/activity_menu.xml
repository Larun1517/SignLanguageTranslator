<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:textScaleX="0.6"
            android:textSize="52dp"
            android:text="겁나 지니어스한 수어 번역기" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/start_button_camera_back"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/menu_button3"
                android:paddingRight="27dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="4"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="상대방의 수어 번역하기" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="4dp"
                        android:background="#7d7dec"/>

                    <TextView
                        android:layout_weight="9"
                        android:textSize="13dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="top|left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="핸드폰을 손에 들고 동작을 촬영하여\n수어를 문자와 음성으로 번역합니다." />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/start_button_camera_front"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/menu_button2"
                android:paddingRight="27dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="4"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:textColor="#000000"
                        android:textSize="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="나의 수어 번역하기" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="4dp"
                        android:background="#a084ee"/>

                    <TextView
                        android:layout_weight="9"
                        android:textSize="13dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="top|left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="핸드폰을 거치하고 동작을 촬영하여\n수어를 문자와 음성으로 번역합니다." />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/start_button_stt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/menu_button1"
                android:paddingRight="27dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="28dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="4"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:textColor="#404040"
                        android:textSize="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="목소리를 글자로 바꾸기" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="4dp"
                        android:background="#cb8cf0"/>

                    <TextView
                        android:layout_weight="9"
                        android:textSize="13dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="top|left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="농인이 읽을수 있도록\n음성을 글로 변환합니다." />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>